{
    "name": "@diia-inhouse/configs",
    "version": "6.1.1",
    "description": "Shared node.js configurations",
    "repository": {
        "type": "git",
        "url": "https://github.com/diia-open-source/be-configs.git"
    },
    "author": "Diia",
    "files": [
        "dist",
        "tsconfig/tsconfig.json",
        "tsconfig/tsconfig.esm.json",
        "vitest"
    ],
    "engines": {
        "node": ">=22"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "tsc",
        "find-circulars": "madge --circular --extensions ts ./",
        "lint": "eslint . && prettier --check .",
        "lint-fix": "eslint . --fix && prettier --write .",
        "lint:lockfile": "lockfile-lint --path package-lock.json --allowed-hosts registry.npmjs.org --validate-https",
        "prepare": "npm run build",
        "semantic-release": "semantic-release",
        "test": "vitest run",
        "test:watch": "vitest watch"
    },
    "commitlint": {
        "extends": "./dist/commitlint"
    },
    "release": {
        "extends": "./dist/semantic-release/package.js"
    },
    "dependencies": {
        "@commitlint/cli": "19.8.0",
        "@commitlint/config-angular": "19.8.0",
        "@saithodev/semantic-release-backmerge": "4.0.1",
        "@semantic-release/git": "10.0.1",
        "@semantic-release/gitlab": "13.2.9",
        "conventional-changelog-conventionalcommits": "8.0.0",
        "semantic-release-slack-bot": "4.0.2",
        "superstruct": "2.0.2",
        "yargs-parser": "22.0.0"
    },
    "devDependencies": {
        "@types/conventional-changelog-writer": "4.0.11",
        "@types/node": "24.10.0",
        "@vitest/coverage-v8": "4.0.7",
        "@vitest/ui": "4.0.7",
        "eslint": "9.39.1",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-unicorn": "62.0.0",
        "lockfile-lint": "4.14.1",
        "madge": "8.0.0",
        "prettier": "3.6.2",
        "rimraf": "6.1.0",
        "semantic-release": "24.2.3",
        "typescript": "5.9.3",
        "typescript-eslint": "8.46.3",
        "vite-tsconfig-paths": "5.1.4",
        "vitest": "4.0.7",
        "vitest-mock-extended": "3.1.0"
    },
    "peerDependencies": {
        "semantic-release": "^24.0.0",
        "typescript": "^5.7.0"
    },
    "license": "SEE LICENSE IN LICENSE.md"
}
