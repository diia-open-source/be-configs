{
    "name": "@diia-inhouse/configs",
    "version": "3.1.5",
    "description": "Shared node.js configurations",
    "repository": {
        "type": "git",
        "url": "https://github.com/diia-open-source/be-configs.git"
    },
    "author": "Diia",
    "files": [
        "dist",
        "tsconfig/tsconfig.json",
        "tsconfig/tsconfig.esm.json",
        "jest/types.d.ts",
        "vitest"
    ],
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "tsc",
        "find-circulars": "madge --circular --extensions ts ./",
        "lint": "eslint '*/**/*.{js,ts}' . && prettier --check .",
        "lint-fix": "eslint '*/**/*.{js,ts}' . --fix && prettier --write .",
        "lint:lockfile": "lockfile-lint --path package-lock.json --allowed-hosts registry.npmjs.org --validate-https",
        "prepare": "npm run build",
        "semantic-release": "semantic-release",
        "test": "jest",
        "test:unit": "npm run test --selectProjects unit --"
    },
    "commitlint": {
        "extends": "./dist/commitlint"
    },
    "release": {
        "extends": "./dist/semantic-release/package.js"
    },
    "jest": {
        "preset": "./dist/jest/jest-preset.js"
    },
    "dependencies": {
        "@commitlint/cli": "19.3.0",
        "@commitlint/config-angular": "19.3.0",
        "@saithodev/semantic-release-backmerge": "4.0.1",
        "@semantic-release/git": "10.0.1",
        "@semantic-release/gitlab": "13.2.0",
        "@types/jest": "29.5.12",
        "jest": "29.7.0",
        "semantic-release-slack-bot": "4.0.2",
        "superstruct": "2.0.2",
        "ts-jest": "29.2.1",
        "vitest": "2.1.1",
        "yargs-parser": "21.1.1"
    },
    "devDependencies": {
        "@types/nock": "11.1.0",
        "@types/node": "20.14.10",
        "@typescript-eslint/eslint-plugin": "7.16.0",
        "@typescript-eslint/parser": "7.16.0",
        "eslint": "8.57.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-config-airbnb-typescript": "18.0.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-anti-trojan-source": "1.1.1",
        "eslint-plugin-import": "2.29.1",
        "eslint-plugin-jest": "28.6.0",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-prettier": "5.1.3",
        "eslint-plugin-promise": "6.4.0",
        "eslint-plugin-regexp": "2.6.0",
        "eslint-plugin-todo-plz": "1.3.1",
        "jest-junit": "16.0.0",
        "lockfile-lint": "4.14.0",
        "madge": "7.0.0",
        "prettier": "3.3.3",
        "rimraf": "6.0.0",
        "semantic-release": "24.0.0",
        "typescript": "5.3.3"
    },
    "peerDependencies": {
        "semantic-release": "^24.0.0",
        "typescript": "^5.2.2"
    },
    "license": "SEE LICENSE IN LICENSE.md"
}
